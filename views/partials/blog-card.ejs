<div class="bg-white rounded-lg shadow-md overflow-hidden card-hover">
  <img src="<%= image %>" alt="Blog Thumbnail" class="w-full h-48 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-800 mb-2 line-clamp-1">
      <%= title %>
    </h3>
    <p class="text-gray-600 mb-4 line-clamp-2 min-h-12">
      <%= content %>
    </p>
    <div class="flex justify-between items-center">
      <a href="/blogs/<%= _id %>" class="text-blue-600 hover:underline font-semibold">
        Read More
      </a>

      <% if (profilePicture) { %>
        <a href="/profile">
          <img src="<%= profilePicture %>" alt="Profile Picture"
            class="w-10 h-10 rounded-full object-cover cursor-pointer" />
        </a>
        <% } %>
    </div>
  </div>
</div>
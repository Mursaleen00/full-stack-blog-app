<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register - My Blog App</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .gradient-bg {
      background: linear-gradient(135deg, #4f46e5, #9333ea);
    }

    .card-hover {
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .card-hover:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1),
        0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .input-focus:focus {
      border-color: #6366f1;
      box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
    }
  </style>
</head>

<body class="gradient-bg flex items-center justify-center min-h-screen">
  <div class="bg-white p-10 rounded-xl shadow-2xl w-96 card-hover">
    <div class="text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Create an Account</h1>
      <p class="text-gray-600 mb-8">Join us to start your journey</p>
    </div>

    <% if (messages.success) { %>
      <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
        <%= messages.success %>
      </div>

      <% } %>
        <% if (messages.error) { %>
          <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
            <%= messages.error %>
          </div>
          <% } %>

            <form action="/auth/register" method="POST" enctype="multipart/form-data">

              <label for="uploadFile1">
                <div id="upload"
                  class="flex inline-block stoke-[#3949AB] bg-white text-indigo-600 py-3 px-8 rounded-lg font-semibold hover:bg-gray-100 transition-all">

                  <svg xmlns="http://www.w3.org/2000/svg" fill="#3949AB" class="w-6 mr-2 fill-white inline"
                    viewBox="0 0 32 32">
                    <path
                      d="M23.75 11.044a7.99 7.99 0 0 0-15.5-.009A8 8 0 0 0 9 27h3a1 1 0 0 0 0-2H9a6 6 0 0 1-.035-12 1.038 1.038 0 0 0 1.1-.854 5.991 5.991 0 0 1 11.862 0A1.08 1.08 0 0 0 23 13a6 6 0 0 1 0 12h-3a1 1 0 0 0 0 2h3a8 8 0 0 0 .75-15.956z"
                      data-original="#3949AB" fill="#3949AB" />
                    <path
                      d="M20.293 19.707a1 1 0 0 0 1.414-1.414l-5-5a1 1 0 0 0-1.414 0l-5 5a1 1 0 0 0 1.414 1.414L15 16.414V29a1 1 0 0 0 2 0V16.414z"
                      data-original="#3949AB" fill="#3949AB" />
                  </svg>
                  Upload Images
                  <input type="file" id='uploadFile1' class="hidden" name="profilePicture" accept="image/*"
                    onchange="displayImage(event)" />

                </div>
                <div class="flex items-center justify-center">
                  <img id="imageDisplay" src="" alt="Uploaded Image"
                    style="max-width: 100%; display: none; cursor: pointer;"
                    class="size-20 rounded-full object-cover" />
                </div>

              </label>


              <div class="my-6">
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                <input type="text" id="name" name="name"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg input-focus focus:outline-none"
                  placeholder="Enter your full name" required />
              </div>
              <div class="mb-6">
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                <input type="email" id="email" name="email"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg input-focus focus:outline-none"
                  placeholder="Enter your email" required />
              </div>
              <div class="mb-6">
                <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                <input type="password" id="password" name="password"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg input-focus focus:outline-none"
                  placeholder="Enter your password" required />
              </div>
              <div class="mb-6">
                <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-2">Confirm
                  Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg input-focus focus:outline-none"
                  placeholder="Confirm your password" required />
              </div>
              <button type="submit"
                class="w-full bg-indigo-600 text-white py-3 px-4 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all">
                Register
              </button>
            </form>
            <div class="mt-6 text-center">
              <p class="text-sm text-gray-600">
                Already have an account?
                <a href="/auth/login" class="text-indigo-600 hover:underline font-semibold">Login</a>
              </p>
            </div>
  </div>



  <script>
    function displayImage(event) {
      const file = event.target.files[0];  // Get the file from the input
      const reader = new FileReader();    // Create a FileReader object
      const upload = document.getElementById('upload');

      reader.onload = function (e) {
        // Get the result from the FileReader and set it as the source of the image
        const image = document.getElementById('imageDisplay');
        image.src = e.target.result;  // Set image source to the uploaded file
        image.style.display = 'block'; // Show the image
      };

      reader.readAsDataURL(file);  // Read the file as a data URL
      upload.style.display = 'none'; // Hide the upload button
    }
  </script>
</body>

</html>